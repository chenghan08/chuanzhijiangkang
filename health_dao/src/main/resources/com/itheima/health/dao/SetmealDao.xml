<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.health.dao.SetmealDao">
    <!-- 添加套餐 -->
    <insert id="add" parameterType="Setmeal" keyProperty="id" useGeneratedKeys="true">
        insert into t_setmeal(name,code,helpCode,sex,age,price,remark,attention,img)
        values (#{name},#{code},#{helpCode},#{sex},#{age},#{price},#{remark},#{attention},#{img})
    </insert>

    <!-- 添加套餐与检查组的关系 -->
    <insert id="addSetmealCheckGroup" parameterType="int">
        insert into t_setmeal_checkgroup (setmeal_id,checkgroup_id)
        values (#{setmealId},#{checkgroupId})
    </insert>

    <!-- 更新套餐 -->
    <update id="update" parameterType="Setmeal">
        update t_setmeal
        set
                name = #{name},
                code = #{code},
                helpCode = #{helpCode},
                sex = #{sex},
                age = #{age},
                price = #{price},
                remark = #{remark},
                attention = #{attention},
                img = #{img}
        where id = #{id}
    </update>

    <!--  删除旧关系 -->
    <delete id="deleteSetmealCheckGroup" parameterType="int">
        delete from t_setmeal_checkgroup where setmeal_id = #{id}
    </delete>

    <!-- 删除套餐 -->
    <delete id="deleteById" parameterType="int">
        delete from t_setmeal where id =#{id}
    </delete>

    <!-- 分页条件查询 -->
    <select id="findPage" parameterType="string" resultType="com.itheima.health.pojo.Setmeal">
        select * from t_setmeal
        <where>
            <if test="value != null and value.length > 0">
                code like #{queryString} or name like #{queryString} or helpCode like #{queryString}
            </if>
        </where>
    </select>

    <!-- 通过id查询套餐 -->
    <select id="findById" parameterType="int" resultType="com.itheima.health.pojo.Setmeal">
        select * from  t_setmeal where id = #{id}
    </select>

    <!-- 查询选中的检查组id集合 -->
    <select id="findCheckGroupIdsBySetmealId" parameterType="int" resultType="java.lang.Integer">
        select checkgroup_id from t_setmeal_checkgroup where setmeal_id = #{id}
    </select>

    <!-- 统计该套餐被订单使用的个数 -->
    <select id="findCountBySetmealId" parameterType="int" resultType="java.lang.Integer">
        select count(1) from t_order where setmeal_id = #{id}
    </select>

    <!-- 查询套餐上的所有图片 -->
    <select id="findImgs"  resultType="java.lang.String">
        select img from t_setmeal
    </select>
    <select id="findAll" resultType="com.itheima.health.pojo.Setmeal">
        select * from t_setmeal
    </select>

    <!-- 通过id查询套餐详情 -->
    <select id="findDetailById" parameterType="int" resultMap="setmealDetailResultMap">
        select s.id,s.name,s.remark,s.img,s.age,s.sex,
            sc.checkgroup_id,g.name checkgroup_name,g.remark checkgroup_remark,
            cc.checkitem_id,i.name checkitem_name
        from
        t_setmeal s left join t_setmeal_checkgroup sc  on sc.setmeal_id=s.id
        left join t_checkgroup g on g.id=sc.checkgroup_id
        left join t_checkgroup_checkitem cc on cc.checkgroup_id=g.id
        left join t_checkitem i on i.id=cc.checkitem_id
        where s.id=#{id}
    </select>
    <resultMap id="setmealDetailResultMap" type="setmeal">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="remark" column="remark"/>
        <result property="img" column="img"/>
        <result property="age" column="age"/>
        <result property="sex" column="sex"/>
        <!--collection collection 主：setmeal下的属性名
            checkGroups 多，集合元素的类型
        -->
        <collection property="checkGroups" ofType="CheckGroup">
            <id property="id" column="checkgroup_id"/>
            <result property="name" column="checkgroup_name"/>
            <result property="remark" column="checkgroup_remark"/>
            <collection property="checkItems" ofType="CheckItem">
                <id property="id" column="checkitem_id"/>
                <result property="name" column="checkitem_name"/>
            </collection>
        </collection>
    </resultMap>


</mapper>